<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="marceloassis.listacompras" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListaComprasActivity"
            android:label="@string/title_activity_lista_compras" >
        </activity>
        <activity
            android:name=".CadastrarUsuarioActivity"
            android:label="@string/title_activity_cadastrar_usuario" >
        </activity>
        <activity
            android:name=".NovoEdicaoActivity"
            android:label="@string/title_activity_novo_edicao" >
        </activity>
    </application>

</manifest>
